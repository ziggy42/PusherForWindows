    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#464646">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Image  Name="UserProfileImage" Source="Assets/MediumGray.png" Margin="50, 100, 50, 0" Grid.Row="0" VerticalAlignment="Top"/>
            <TextBlock Name="UserNameTextBlock" FontSize="24" Margin="0, 10, 0, 0" Grid.Row="1" HorizontalAlignment="Center" TextAlignment="Center"/>
        </Grid>

        <!-- ItemTemplate="{StaticResource pushTemplate}"  -->
        <ListView Name="PushesListView" 
                  Grid.Column="1" 
                  Background="#DCDCDC"
                  IsItemClickEnabled="True"
                  ItemTemplateSelector="{StaticResource PushTemplateSelector}"
                  ItemsSource="{Binding Items}"
                  ItemClick="PushesListView_ItemClick">

            <ListView.Header >
                <StackPanel Height="60"/>
            </ListView.Header>

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                </Style>
            </ListView.ItemContainerStyle>

        </ListView>

        <Button 
                Name="PushButton" 
                Click="PushButton_Click" 
                Content="+" 
                Grid.Column="1"
                HorizontalAlignment="Right" 
                Margin="0,0,40,40" 
                VerticalAlignment="Bottom"/>

    </Grid>
</Page>
